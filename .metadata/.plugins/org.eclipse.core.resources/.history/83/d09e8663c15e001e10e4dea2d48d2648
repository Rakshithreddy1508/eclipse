package Assgiments;

import java.util.ArrayList;
import java.util.Comparator;
import java.util.List;
import java.util.stream.Collectors;

public class BussinessLogic {

	ArrayList<EmployeeEntity> ed = new ArrayList<EmployeeEntity>();
	void Business_logic() {
		ed.add(new EmployeeEntity("Ram",111,25,15000,"R&D"));
		ed.add(new EmployeeEntity("Suri",2222,23,10000,"R&D"));
		ed.add(new EmployeeEntity("Ram",222,21,40000,"R&D"));
		ed.add(new EmployeeEntity("Ram",444,30,35000,"R&D"));
		ed.add(new EmployeeEntity("Ram",000,25,5000,"R&D"));
		ed.add(new EmployeeEntity("Ram",888,25,100000,"R&D"));

		System.out.println("\n Displaying all the Records: ");

		for (EmployeeEntity s:ed) {

			System.out.println(s);

		}


		List<EmployeeEntity> sortedList = ed.stream().sorted(Comparator.comparing(EmployeeEntity::getAge)).collect(Collectors.toList());
	      System.out.println("\n Sorted by Age:");
	      sortedList.forEach(System.out::println);

	   }
	public void bussinessLogic() {
		// TODO Auto-generated method stub

	}
	}
